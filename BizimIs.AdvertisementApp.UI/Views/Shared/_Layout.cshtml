<body id="page-top">
    <!-- Navigation-->
    <div class=" p-0 nav-bar">
        <nav class="navbar navbar-expand-lg bg-none navbar-dark py-3">
            <a href="" class="navbar-brand">
                <h1 class="m-0 display-4 font-weight-bold text-uppercase text-black">Bizim İş</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav ml-auto p-4 bg-secondary">
                     @{ if (User.Identity.IsAuthenticated)
                         { 
                             @if (User.IsInRole("Member"))
                            {
                            <a class="nav-item nav-link active" asp-action="HumanResource" asp-controller="Home">İlan Sayfası</a>
                            }

                            @if (User.IsInRole("Admin"))
                              {
                                <a class="nav-item nav-link" asp-action="List" asp-controller="Advertisement">Başvurular</a>
                                <a class="nav-item nav-link" asp-action="List" asp-controller="Application">İş İlanları Yönetimi</a>
                              }

                                 <div class="nav-item dropdown">
                             <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Profilim</a>
                             <div class="dropdown-menu text-capitalize">
                                 <a asp-action="#" asp-controller="#" class="dropdown-item">Düzenle</a>
                                 <a asp-action="LogOut" asp-controller="Account" class="dropdown-item">Çıkış Yap</a>
                             </div>
                          </div>

                       @*<a class="nav-item nav-link" asp-action="LogOut" asp-controller="Account">Çıkış Yap</a>*@
                    
                         } 
                         else
                         {
                            <a class="nav-item nav-link" asp-action="SignUp" asp-controller="Account">Kayıt Ol</a>
                            <a class="nav-item nav-link" asp-action="SignIn" asp-controller="Account">Giriş Yap</a>
                            <a class="nav-item nav-link" asp-action="HumanResource" asp-controller="Home">İlan Sayfası</a>
                         } 

                    
                         }
